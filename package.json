    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/async-cli-spinner/issues"
    },
    "homepage": "https://github.com/SlimIO/async-cli-spinner#readme",
    "dependencies": {
        "@slimio/is": "^1.5.0",
